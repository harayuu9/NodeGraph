<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NodeGraph.Editor.ViewModels"
        xmlns:controls="clr-namespace:NodeGraph.Editor.Controls"
        xmlns:serialization="clr-namespace:NodeGraph.Editor.Serialization"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="NodeGraph.Editor.Views.ExecutionHistoryWindow"
        x:DataType="vm:ExecutionHistoryWindowViewModel"
        Title="Execution History"
        Width="1000"
        Height="600"
        WindowStartupLocation="CenterOwner">

  <Grid ColumnDefinitions="200,5,*,5,280">

    <!-- Left Panel: History List -->
    <Border Grid.Column="0"
            Background="{DynamicResource WindowHeaderBackgroundBrush}"
            Padding="10">
      <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0"
                   Text="Execution History"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Histories}"
                 SelectedItem="{Binding SelectedHistory}">
          <ListBox.ItemTemplate>
            <DataTemplate x:DataType="serialization:ExecutionHistory">
              <TextBlock Text="{Binding ExecutedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" />
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Grid>
    </Border>

    <!-- Left Splitter -->
    <GridSplitter Grid.Column="1"
                  Width="5"
                  Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />

    <!-- Center: Graph View + Step Controls -->
    <Grid Grid.Column="2" RowDefinitions="*,Auto">

      <!-- Graph View (Read-Only) -->
      <controls:GraphControl Grid.Row="0"
                             Graph="{Binding CurrentGraph}"
                             IsReadOnly="True"
                             Background="{DynamicResource GraphBackgroundBrush}" />

      <!-- Empty State Message -->
      <TextBlock Grid.Row="0"
                 Text="Select an execution history from the list"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 FontSize="16"
                 IsVisible="{Binding !HasHistory}" />

      <!-- Step Controls -->
      <Border Grid.Row="1"
              Background="{DynamicResource WindowHeaderBackgroundBrush}"
              Padding="10">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10">
          <Button Content="|&lt;"
                  Command="{Binding GoToFirstCommand}"
                  Width="40"
                  HorizontalContentAlignment="Center" />
          <Button Content="&lt;"
                  Command="{Binding GoToPreviousCommand}"
                  Width="40"
                  HorizontalContentAlignment="Center" />

          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Step " />
            <TextBlock Text="{Binding CurrentStepNumber, FallbackValue=1}" />
            <TextBlock Text=" / " />
            <TextBlock Text="{Binding TotalSteps, FallbackValue=0}" />
          </StackPanel>

          <Button Content="&gt;"
                  Command="{Binding GoToNextCommand}"
                  Width="40"
                  HorizontalContentAlignment="Center" />
          <Button Content="&gt;|"
                  Command="{Binding GoToLastCommand}"
                  Width="40"
                  HorizontalContentAlignment="Center" />
        </StackPanel>
      </Border>
    </Grid>

    <!-- Right Splitter -->
    <GridSplitter Grid.Column="3"
                  Width="5"
                  Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />

    <!-- Right Panel: Node Details -->
    <Border Grid.Column="4"
            Background="{DynamicResource WindowHeaderBackgroundBrush}"
            Padding="10">
      <Grid RowDefinitions="Auto,Auto,*,Auto,*">

        <!-- Node Name -->
        <TextBlock Grid.Row="0"
                   Text="Current Node"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,5" />
        <TextBlock Grid.Row="1"
                   Text="{Binding CurrentStepNode.Name, FallbackValue='(none)'}"
                   FontSize="12"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumHighBrush}"
                   Margin="0,0,0,15" />

        <!-- Input Values -->
        <Grid Grid.Row="2" RowDefinitions="Auto,*">
          <TextBlock Grid.Row="0"
                     Text="Input Values"
                     FontWeight="Bold"
                     Margin="0,0,0,5" />
          <Border Grid.Row="1"
                  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                  BorderThickness="1"
                  CornerRadius="4"
                  Padding="5">
            <ItemsControl ItemsSource="{Binding CurrentInputValues}">
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:PortValueItem">
                  <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                    <TextBlock Grid.Column="0"
                               Text="{Binding PortName}"
                               FontWeight="SemiBold"
                               Margin="0,0,10,0" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding Value}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumHighBrush}" />
                  </Grid>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </Border>
        </Grid>

        <!-- Output Values -->
        <Grid Grid.Row="4" RowDefinitions="Auto,*">
          <TextBlock Grid.Row="0"
                     Text="Output Values"
                     FontWeight="Bold"
                     Margin="0,10,0,5" />
          <Border Grid.Row="1"
                  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                  BorderThickness="1"
                  CornerRadius="4"
                  Padding="5">
            <ItemsControl ItemsSource="{Binding CurrentOutputValues}">
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:PortValueItem">
                  <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                    <TextBlock Grid.Column="0"
                               Text="{Binding PortName}"
                               FontWeight="SemiBold"
                               Margin="0,0,10,0" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding Value}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumHighBrush}" />
                  </Grid>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </Border>
        </Grid>

      </Grid>
    </Border>

  </Grid>

</Window>
